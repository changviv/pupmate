<div class="search-container">
	<input class="searchbar" type="search" placeholder="Search by city...">
</div>

<div class="results-container">
	<div class="row">
		<div class="col-4">
			<div class="card" style="width: 18rem;">
				<img src="/assets/images/zoe.jpeg" class="card-img-top" alt="...">
				<div class="rescard-body">
					<p class="card-title">Zoe</p>
				</div>
			</div>
		</div>
		<div class="col-5">
			<section>
				{{#each puppers}}
				<div class="card inner-card mb-3" style="max-width: 540px;">
					<div class="row no-gutters">
						<div class="col-md-4">
							<img src={{photo}} class="card-img" alt={{name}}>
						</div>
						<div class="col-md-8">
							<div class="card-body">
								<h5 class="card-title">{{name}}</h5>
								<p class="card-text">Breed: {{ breed}} </p>
								<p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
							</div>
						</div>
					</div>
				</div>
				{{/each}}
			</section>
		</div>
	</div>